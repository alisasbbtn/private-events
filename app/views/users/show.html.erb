<%= provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-4">
    <h1><%= @user.name %></h1>
  </div>

  <div class="col-md-8">
    <% if @user.events.any? %>
      <h1>Events</h1>
      <h3>Created <span class="badge"><%= @user.events.count %></span></h3>
      <div class="list-group events">
        <% @created_events.each do |event| %>
          <%= link_to event.title, event_path(event), class: "list-group-item" %>
        <% end %>
      </div>
    <% end %>

    <br />

    <% if @user.attended_events.any? %>
      <h3>Attended <span class="badge"><%= @user.attended_events.count %></span></h3>
      <h4>Upcoming</h4>
      <div class="list-group events">
        <% @upcoming_events.each do |event| %>
          <%= link_to event.title, event_path(event), class: "list-group-item" %>
        <% end %>
      </div>
      <h4>Previous</h4>
      <div class="list-group events">
        <% @previous_events.each do |event| %>
          <%= link_to event.title, event_path(event), class: "list-group-item" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
